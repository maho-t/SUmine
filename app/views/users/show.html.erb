<h2>Profile</h2>
<% breadcrumb :user_show, @user %>
<table>
  <tr>
    <th>ユーザー名</th>
    <td><%= @user.full_name %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th>所属</th>
      <td>
        <% @user.teams.each do |team| %>
          <%= team.name %><br>
        <% end %>
      </td>
  </tr>
   <tr>
    <th>利用開始日</th>
    <td><%= @user.created_at.strftime('%Y年%m月%d日') %></td>
  </tr>
</table>

<div class="delete-user">
  <% if @user.id == current_user.id%>
    <%= link_to "ユーザーを削除する", user_path(@user.id), method: :delete, data: {confirm: "参加しているチームからも削除されますが、本当に削除しますか？"} %>
  <% end %>
</div>