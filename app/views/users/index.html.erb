<h2>登録者</h2>
<% breadcrumb :users %>
<table class="user-index">
  <tr class="users">
    <th class="user-table">ユーザー名</th>
    <th class="user-table">メールアドレス</th>
    <th class="user-table">所属</th>
    <th class="user-table">利用開始日</th>
  </tr>
  <tr class="users">
    <% @users.each do |user| %>
      <td class="user"><%= user.full_name %></td>
      <td class="user"><%= user.email %></td>
      <%# 一人のユーザーに対して、所属するチームの名前を繰り返す処理 %>
      <% user.teams.each do |team| %>
        <td class="user"><%= team.name %><br></td>
      <% end %>
      <td class="user"><%= user.created_at.strftime('%Y年%m月%d日') %></td>
    <% end %>
  </tr>
</table>