<%= render "shared/side_bar" %>
<div class="main-place">
  <h1>チーム詳細画面</h1>
  <div class="team-detail">
    <%= @team.name %>
    <%= @team.prof %>
    <%= @team.email %>
    <% @team.users.each do |users| %>
      <%= users.last_name %>
      <%= users.first_name %>
    <% end %>
  </div>
  <% if @team.user_ids.include?(current_user.id) %>
    <%= link_to "編集する", edit_team_path(@team.id), method: :get %>
    <%= link_to "削除する", team_path(@team.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
  <% end %>
</div>