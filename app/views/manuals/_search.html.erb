<%# 検索機能 %>
<h3>検索機能箇所</h3>
<%= search_form_for Manual.ransack(params[:q]), url: search_manuals_path do |f| %>
  <div class="search-field">
    <% f.label :team_id, 'チーム' %>
    <%= f.collection_select(:team_id_in, current_user.teams, :id, :name, {include_blank: "チームを選択してください"} )%>
  </div>
  <div class="search-field">
    <% f.label :title_cont, 'タイトル' %>
    <br>
    <%= f.text_field :title_cont, placeholder: 'タイトル' %>
  </div>
  <%= f.label :submit, class: "search-button" do %>
    <input type= "submit" value="検索" class="send">
    <%= f.submit :submit, id: "q_submit", style: "display: none;" %>
  <% end %>
<% end %>