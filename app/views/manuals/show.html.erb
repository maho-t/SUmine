<h1>マニュアル詳細画面</h1>
<% breadcrumb :manual_show, @manual %>
<% if current_user.id == @manual.user_id %>
  <%= link_to "編集する", edit_manual_path(@manual.id) %>
  <%= link_to "削除する", manual_path(@manual.id), method: :delete, data: {confirm: "本当に削除しますか？"} %>
<% end %>
<h4>マニュアルタイトル</h4>
<%= @manual.title %>
<h4>マニュアル詳細</h4>
<%= @manual.manual_text %>
<h4>マニュアル作成日</h4>
<%= @manual.created_at.strftime('%Y/%m/%d') %>
<h4>マニュアル作成者</h4>
<%= @manual.user.full_name %>