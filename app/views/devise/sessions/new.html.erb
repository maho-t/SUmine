<!doctype html>
<html lang="ja">
  <head>
    <link rel="canonical" href="https://getbootstrap.jp/docs/5.0/examples/sign-in/">

    <!-- Bootstrap core CSS -->
    <link href=https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>
    
    <!-- Custom styles for this template -->
    <link href="users.scss" rel="stylesheet">
  </head>

  <body class="text-center">
    <main class="form-signin">
      <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <form>
        <img class="mb-4" src="/assets/mine-logo.png" alt="" width="170" height="170">
        <h1 class="h3 mb-3 fw-normal">LOG IN</h1>

        <div class="form-floating">
          <label for="floatingInput">メールアドレス</label>
          <%= f.email_field :email, class:"form-control", id:"email", autofocus: true %>
        </div>
        <div class="form-floating">
          <label for="floatingPassword">パスワード</label>
          <%= f.password_field :password, class:"form-control", id:"password" %>
        </div>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <%= f.submit "ログイン" ,class:"w-100 btn btn-lg btn-success" %>
        <%= render "devise/shared/links" %>
        <p class="mt-5 mb-3 text-muted">&copy; su_mine</p>
      </form>
      <% end %>
    </main>
  </body>
</html>
